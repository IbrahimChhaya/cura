<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud"
    tools:context="StartUpStuff.GuardianRegister.NewGuardianRegister">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        app:layout_constraintDimensionRatio="1:1.4"

        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/textView30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lblpicturepassword"
                    android:layout_width="235dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:text=" Sign In"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editEmail" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-5dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lblFavouriteFood"
                    android:layout_width="235dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Favourite Food"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editEmail" />
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginTop="-5dp"
                app:cardCornerRadius="80dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImageSlider2ChildFood"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="65dp"
                    android:paddingEnd="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="0dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lblFavouriteAnimal"
                    android:layout_width="235dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Favourite Animal"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editEmail" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginTop="-5dp"
                app:cardCornerRadius="80dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImageSlider2ChildAnimal"
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:paddingStart="65dp"
                    android:paddingEnd="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/lblFavouriteColor"
                    android:layout_width="235dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Colour"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editEmail" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="270dp"
                android:layout_height="60dp"
                android:layout_marginTop="-5dp"
                app:cardCornerRadius="80dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerImageSlider2ChildColor"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="65dp"
                    android:paddingEnd="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />
            </com.google.android.material.card.MaterialCardView>


            <Button
                android:id="@+id/btnChildRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Sign In"
                app:cornerRadius="30dp" />
<!--
            <TextView
                android:id="@+id/txtPasswordInputRedirect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dont have a picture password? Click here"
                android:gravity="center"
                android:layout_marginTop="0dp"/>-->

<!--            <TextView-->
<!--                android:id="@+id/txtAlreadySigned"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="-10dp"-->
<!--                android:text="Already signed up? Sign in" />-->

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/imgbtnPrev"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_marginTop="16dp"
        android:background="#FBF5F2"
        android:src="@drawable/ic_baseline_arrow_back_24_black"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="Welcome Back"
        android:textSize="26sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/imgbtnPrev" />

