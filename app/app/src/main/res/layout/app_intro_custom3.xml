<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/App_Intro_Col3">

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/child_mood_tracker"
            android:layout_width="190dp"
            android:layout_height="200dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/App_Intro_Col3"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="20dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/resourcehubicon"
                    android:layout_margin="5dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

                <!--                <TextView-->
                <!--                    android:textColor="#6f6f6f"-->
                <!--                    android:text="How Are You Feeling\n Today?"-->
                <!--                    android:textSize="12sp"-->
                <!--                    android:textStyle="bold"-->
                <!--                    android:gravity="center"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"/>-->

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
<!--        <ImageView-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="325dp"-->
<!--            android:layout_marginTop="0dp"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:src="@drawable/rhub"-->

<!--            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resource Hub"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="Provides detailed information on
different types of mental health issues and problems."
                android:textAlignment="textStart"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_marginTop="80dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/rhub_monkey" />



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>