<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#FBF5F2"
    tools:context="ChildReports.MoodFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:contentDescription="Mood logs for past week"
            android:id="@+id/crdStats"
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_gravity="top"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="Daily Mood"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <!--<com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart1"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"/>-->
                <!-- <com.jjoe64.graphview.GraphView
                     android:layout_gravity="center"
                     android:layout_width="400dp"
                     android:layout_height="200dip"
                     android:id="@+id/graph"/>-->
                <!-- <com.velli20.materialunixgraph.LineGraph
                     android:id="@+id/graph"
                     android:layout_width="match_parent"
                     android:layout_height="200dp"
                     />-->
                <!--  <com.github.mikephil.charting.charts.LineChart
                      android:id="@+id/reportingChart"
                      android:layout_width="match_parent"
                      android:layout_height="230dp"
                      android:layout_marginLeft="16dp"
                      android:layout_marginRight="16dp"
                      android:layout_marginTop="8dp"
                      android:background="@color/white"
                      android:elevation="0dp"
                      />-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="210dp"
                    android:layout_marginHorizontal="0dp"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:background="@drawable/blobgrin" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/blobsmile" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/blobneutral" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/blobsad" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/blobsob" />

                    </LinearLayout>

                    <lecho.lib.hellocharts.view.LineChartView
                        android:contentDescription="Mood graph"
                        android:id="@+id/chart"
                        android:layout_width="340dp"
                        android:layout_height="205dp"
                        android:layout_marginTop="5dp" />
                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Mood Details"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/stat2card"
                    android:layout_width="180dp"
                    android:layout_height="90dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="16dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:backgroundTint="@color/colorPrimary"
                            app:cardCornerRadius="30dp">

                            <TextView
                                android:id="@+id/txtTotalLogs"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="20"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mood Logs"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="for past 1 week"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="180dp"
                    android:contentDescription="average weekly mood"
                    android:layout_height="90dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/imgAverageMood"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAverageMood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Average Mood"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtCurrentMood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>