<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloud"
    tools:context="StartUpStuff.GuardianRegister.NewGuardianRegister">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/GCRegmaterialCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="1dp"
        app:layout_constraintDimensionRatio="1:1.38"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/GCRegtextView30">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="30dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/GCReglblpicturepassword"
                    android:layout_width="235dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text=" Let's Create A Picture Password"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GCRegeditEmail" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-5dp"
                android:layout_marginLeft="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/GCReglblFavouriteFood"
                    android:layout_width="235dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Favourite Food"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GCRegeditEmail" />
            </com.google.android.material.card.MaterialCardView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="270dp"
                android:layout_height="60dp"
                app:cardCornerRadius="80dp"
                android:layout_marginTop="-5dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/GCRegviewPagerImageSlider2ChildFood"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="65dp"
                    android:paddingEnd="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GCRegtextView5" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="28dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/GCReglblFavouriteAnimal"
                    android:layout_width="235dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Favourite Animal"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GCRegeditEmail" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="270dp"
                android:layout_height="60dp"
                app:cardCornerRadius="80dp"
                android:layout_marginTop="-5dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/GCRegviewPagerImageSlider2ChildAnimal"
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:paddingStart="65dp"
                    android:paddingEnd="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GCRegtextView5" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="20dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/GCReglblFavouriteColor"
                    android:layout_width="235dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Favourite Color"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GCRegeditEmail" />


            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="270dp"
                android:layout_height="60dp"
                app:cardCornerRadius="80dp"
                android:layout_marginTop="-5dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/GCRegviewPagerImageSlider2ChildColor"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:paddingStart="65dp"
                    android:paddingEnd="65dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/GCRegtextView5" />
            </com.google.android.material.card.MaterialCardView>



            <TextView
                android:id="@+id/txtTextPasswordInstead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Prefer Text Password? Click here"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="10dp"/>

            <Button
                android:id="@+id/GCRegbtnChildRegister"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/colorPrimary"
                android:text="Sign Up"
                app:cornerRadius="30dp" />


<!--            <TextView-->
<!--                android:id="@+id/GCRegtxtAlreadySigned"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:text="Already signed up? Sign in" />-->

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/GCRegimgbtnPrev"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="#FBF5F2"
        android:src="@drawable/ic_baseline_arrow_back_24_black"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/GCRegtextView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:text="Almost Done"
        android:textSize="26sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/GCRegimgbtnPrev" />

    <ProgressBar
        android:id="@+id/GCRegprogressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="184dp"
        android:layout_height="23dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_icons"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        android:max="50"
        android:secondaryProgressTint="@color/light_green"
        android:progressTint="@color/colorPrimary"
        android:progress="40"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/GCRegmaterialCardView" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />



</androidx.constraintlayout.widget.ConstraintLayout>

