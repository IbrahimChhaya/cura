                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.139">

                <ImageView
                    android:id="@+id/ImageRescan"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:backgroundTint="#FBF5F2"
                    android:padding="5dp"
                    android:src="@drawable/ic_baseline_recycling_24" />

                <TextView
                    android:id="@+id/textViewReScan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="60dp"
                    android:text="ReScan"
                    android:textColor="#FF9565"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toStartOf="@+id/textViewPair"
                    app:layout_constraintHorizontal_bias="0.04"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardView2" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
