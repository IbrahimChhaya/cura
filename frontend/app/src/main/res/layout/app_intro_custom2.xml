<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/App_Intro_Col3">

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/child_mood_tracker"
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="15dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:src="@drawable/blobsmile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>

                <TextView
                    android:textColor="#6f6f6f"
                    android:text="How Are You Feeling\n Today?"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
<!--        <ImageView-->
<!--            android:layout_width="330dp"-->
<!--            android:layout_height="390dp"-->
<!--            android:layout_marginTop="0dp"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:src="@drawable/mood_tracker_mod"-->

<!--            />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood Tracker"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">



            <TextView
                android:layout_width="203dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginRight="-50dp"
                android:text="Record How You Feel Anytime, Anywhere."
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textSize="16dp"/>
                <!--android:background="@drawable/speech_bubble"-->
            <ImageView
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/mood_monkey" />






        </LinearLayout>

    </LinearLayout>

</RelativeLayout>