<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Guardian_Home"
    android:background="#FBF5F2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:contentDescription="peepp"
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:text="My Dashboard"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDashboard"
                android:text="" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="40dp"
                app:cardElevation="0dp">
            <ImageView
                android:id="@+id/guardianProfilePic"
                android:layout_alignParentRight="true"
                android:src="@drawable/child0"
                android:layout_width="62dp"
                android:layout_height="62dp"/>
            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>

        <GridLayout
            android:id="@+id/guardian_home_grid"
            android:layout_marginTop="15dp"
            android:rowCount="7"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_find_psychologist"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_baseline_person_search_24"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="Find a Psychologist"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_view_meetings"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_calendar_today_24px"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="View Meetings"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_view_reports"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_baseline_bar_chart_24"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="Child Reports"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_resource_hub"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_noun_resource_3588004"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="Resource Hub"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_personal_info"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_baseline_account_box_24"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="My Account"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_link_child"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_baseline_add_link_24"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="Pair with Child"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_children"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/my_children"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="My Children"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_registerChild"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_baseline_app_registration_24"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="Register Child"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_chat_counsellor"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="24dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/chatBubbleIcon"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="35dp"
                            android:src="@drawable/ic_baseline_chat_bubble_outline_24" />
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/crdChatCounsellorGuardianBubble"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginLeft="110dp"
                            android:backgroundTint="#ff0000"
                            >

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:text="12"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:textColor="@color/white"/>

                        </com.google.android.material.card.MaterialCardView>

                    </RelativeLayout>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:textColor="#6f6f6f"
                        android:text="Chat with Counsellor"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!--card for logout-->
            <androidx.cardview.widget.CardView
                android:id="@+id/guardian_logout"
                android:layout_width="70dp"
                android:layout_height="190dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="0dp"
                app:cardCornerRadius="20dp"
                android:layout_margin="15dp"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ic_baseline_logout_24"
                        android:layout_width="100dp"
                        android:layout_height="100dp"/>

                    <TextView
                        android:layout_marginTop="12dp"
                        android:textColor="#6f6f6f"
                        android:text="Logout"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </GridLayout>
    </LinearLayout>

</ScrollView>